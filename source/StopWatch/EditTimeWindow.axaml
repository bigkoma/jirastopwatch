<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="StopWatch.EditTimeWindow"
        Title="Edit Timer"
        Width="260"
        Height="170"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderText" Grid.Row="0" Text="Edit timer"/>
        <TextBox Grid.Row="1" x:Name="tbTime" HorizontalAlignment="Stretch" Margin="0,6,0,0" FontSize="16" HorizontalContentAlignment="Right"/>
        <TextBlock x:Name="HelpText" Grid.Row="2" Margin="0,6,0,0" Text="Supported formats: 2h 15m and 2.25h"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnOk" Content="OK" Width="80" Margin="0,0,10,0" Click="BtnOk_OnClick"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Click="BtnCancel_OnClick"/>
        </StackPanel>
    </Grid>
    
</Window>