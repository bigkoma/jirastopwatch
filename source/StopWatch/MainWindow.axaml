<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="StopWatch.MainWindow"
        Title="JiraStopwatch"
        Width="800"
        Height="600"
        WindowStartupLocation="Manual">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem x:Name="menuFileRoot" Header="_File">
                <MenuItem Header="_Settings" x:Name="menuSettings" Click="MenuSettings_Click"/>
                <MenuItem Header="_Exit" x:Name="menuExit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem x:Name="menuToolsRoot" Header="_Tools">
                <MenuItem Header="_About" x:Name="menuAbout" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top panel -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock x:Name="txtActiveFilterLabel" Text="Active Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="cbFilters" Width="200" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblActiveFilter" Text="No filter selected" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Issue controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock x:Name="txtIssueLabel" Text="Issue:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="tbIssueKey" Width="180" Margin="0,0,6,0"/>
                        <Button x:Name="btnStart" Content="Start" Margin="0,0,5,0"/>
                        <Button x:Name="btnPause" Content="Pause" Margin="0,0,5,0"/>
                        <Button x:Name="btnStop" Content="Stop" Margin="0,0,5,0"/>
                        <TextBlock x:Name="tbTimer" Text="00:00:00" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                        <TextBlock x:Name="lblTotalTime" Text="Total:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                        <TextBox x:Name="tbTotalTime" Text="00:00:00" Width="100" Margin="0,0,10,0" IsReadOnly="True"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Issues panel -->
            <ScrollViewer Grid.Row="1" Margin="10">
                <StackPanel x:Name="issuesPanel">
                    <!-- Issues will be added dynamically here -->
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom panel -->
            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="0,1,0,0" Margin="0,5,0,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="btnAddIssue" Content="Add Issue" Margin="0,0,10,0" ToolTip.Tip="Add a new issue by key"/>
                        <Button x:Name="btnSubmitWorklog" Content="Submit Worklog" Margin="0,0,10,0" ToolTip.Tip="Submit all worklogs"/>
                        <TextBlock x:Name="lblConnectionStatus" Text="Not connected" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="btnSettings" Content="Settings" Margin="0,0,5,0"/>
                        <Button x:Name="btnAbout" Content="About" Margin="0,0,5,0"/>
                        <Button x:Name="btnHelp" Content="Help" Margin="0,0,5,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1,0,0,0" Background="LightGray">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" x:Name="tbStatus" Text="Ready"/>
                <TextBlock Grid.Column="1" x:Name="tbCurrentIssue" Text=""/>
            </Grid>
        </Border>
    </Grid>
</Window>