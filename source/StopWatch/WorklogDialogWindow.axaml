<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="StopWatch.WorklogDialogWindow"
        Title="Post Worklog"
        Width="480"
        Height="600"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="lblIssue" FontWeight="Bold"/>

        <TextBlock Grid.Row="1" x:Name="txtAddComment" Text="Add a comment (optional)"/>
        <TextBox Grid.Row="2" x:Name="tbComment" AcceptsReturn="True" Height="120" TextWrapping="Wrap"/>


        <!-- Time spent -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="6" Margin="0,8,0,0">
            <TextBlock x:Name="txtTimeSpent" Text="Czas pracy:" VerticalAlignment="Center"/>
            <TextBox x:Name="tbTimeSpent" Width="120" ToolTip.Tip="Jira format e.g. 2m, 1h 30m"/>
        </StackPanel>

        <!-- Start date/time -->
        <StackPanel Grid.Row="4" Orientation="Vertical" Spacing="10" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock x:Name="txtStartDate" Text="Data rozpoczÄ™cia:" VerticalAlignment="Center" FontSize="15"/>
                <DatePicker x:Name="startDatePicker" FontSize="16" Padding="2,2" Width="300" MinWidth="160"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock x:Name="txtStartTime" Text="Godzina rozpoczÄ™cia:" VerticalAlignment="Center" FontSize="15"/>
                <TimePicker x:Name="startTimePicker" FontSize="16" Padding="2,2" Width="250" MinWidth="120"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="5" Margin="0,10,0,0" BorderBrush="Gray" BorderThickness="1" Padding="8">
            <StackPanel Spacing="6">
                <TextBlock x:Name="txtRemainingHeader" Text="Remaining Estimate" FontWeight="Bold"/>
                <RadioButton x:Name="rdAuto" Content="Adjust Automatically" IsChecked="True" Checked="Estimate_Checked" GroupName="EstimateGroup"/>
                <RadioButton x:Name="rdLeave" Content="Leave as is" Checked="Estimate_Checked" GroupName="EstimateGroup"/>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <RadioButton x:Name="rdSetTo" Content="Set to" Checked="Estimate_Checked" GroupName="EstimateGroup"/>
                    <TextBox x:Name="tbSetTo" Width="100" IsEnabled="False" TextChanged="TbEstimate_TextChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <RadioButton x:Name="rdReduceBy" Content="Reduce by" Checked="Estimate_Checked" GroupName="EstimateGroup"/>
                    <TextBox x:Name="tbReduceBy" Width="100" IsEnabled="False" TextChanged="TbEstimate_TextChanged"/>
                </StackPanel>
                <TextBlock x:Name="lblRemaining" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <!-- UsuniÄ™to powielone pole wyboru daty/godziny -->

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,20" Spacing="18">
            <Button x:Name="btnSave" Width="160" Height="38" Click="BtnSave_OnClick" Content="ðŸ’¾ Zapisz na pÃ³Åºniej" ToolTip.Tip="Zapisz na pÃ³Åºniej"/>
            <Button x:Name="btnOk" Width="130" Height="38" Click="BtnOk_OnClick" Content="ðŸ“¤ WyÅ›lij" ToolTip.Tip="WyÅ›lij do JIRA"/>
            <Button x:Name="btnCancel" Width="130" Height="38" Click="BtnCancel_OnClick" Content="âŒ Anuluj" ToolTip.Tip="Anuluj i zamknij"/>
        </StackPanel>
    </Grid>
</Window>