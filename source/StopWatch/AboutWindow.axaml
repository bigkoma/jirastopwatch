<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="StopWatch.AboutWindow"
        Title="About Jira StopWatch by Komasa"
        Width="360"
        Height="240"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblNameVersion"
                   Grid.Row="0"
                   Text="Jira StopWatch by Komasa v."
                   FontWeight="Bold"
                   FontSize="16"/>

        <TextBlock x:Name="AuthorBlock"
                   Grid.Row="1"
                   Text="Author: Michał Komasa"
                   TextAlignment="Center"
                   Margin="0,6,0,6"/>

        <TextBlock x:Name="CopyrightBlock"
                   Grid.Row="2"
                   TextAlignment="Center"
                   Margin="0,8,0,8">
            <Run Text="Copyright 2026 Michał Komasa"/>
            <LineBreak/>
            <Run Text="Licensed under the Apache License, Version 2.0."/>
        </TextBlock>

        <StackPanel Grid.Row="3" Spacing="6">
            <TextBlock x:Name="ReadLicenseLink" Classes="link" Cursor="Hand" Foreground="RoyalBlue" Text="Read License" Tapped="License_Tapped"/>
            <TextBlock x:Name="VisitHomepageLink" Classes="link" Cursor="Hand" Foreground="RoyalBlue" Text="Visit product homepage" Tapped="Homepage_Tapped"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnOk" Content="Close" Width="90" Click="BtnOk_OnClick"/>
        </StackPanel>
    </Grid>
</Window>